{{#partial "content"}}
    <div class="new-entry">
        <h2>Edit Entry</h2>
        <form action="/entry/{{entry.slug}}/edit" method="POST">
            <label for="title"> Title</label>
            <input type="text" name="title" value="{{entry.title}}"><br>
            <label for="entry">Entry</label>
            <textarea rows="5" name="body">{{entry.body}}</textarea>
            <label for="tags"> Tags</label>
            <input type="text" name="tags" placeholder="Example: #foo #bar-baz" value="{{entry.formattedTags}}"><br>
            <input type="submit" value="Publish Entry" class="button">
            <a href="/entry/{{entry.slug}}" class="button button-secondary">Cancel</a>
        </form>
        <br>
        <form action="/entry/{{entry.slug}}/delete" method="POST">
            <input type="submit" value="Delete Entry" class="button button-secondary" />
        </form>
    </div>
{{/partial}}

{{> base.hbs}}